@model List<MayBeYouMissSomeNews.Models.category>
@using MayBeYouMissSomeNews.Models
@{
    ViewBag.Title = "listcategory";
    Layout = "~/Views/Shared/LayoutOfAdmin.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Danh sách bài viết</h6>

                </div>
                <div class="col-lg-6 col-5 text-right">

                    <a href="#" class="btn btn-sm btn-neutral"><i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">


                    <a href="CreateCategory" class="btn btn-round btn-primary"><i class="fas fa-plus-circle"></i></a>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col" class="sort" data-sort="budget">Tên</th>
                                <th scope="col" class="sort" data-sort="status">Trạng thái</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.categoryid</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.name</span>
                                        </div>
                                    </td>
                                    <td>
                                        @if (@i.status == 1)
                                        {
                                            <span class="name mb-0 text-sm">Hiển thị</span>
                                        }
                                        else if (i.status == 0)
                                        {

                                            <span class="name mb-0 text-sm">Ẩn</span>
                                        }
                                        else
                                        {
                                            <span class="name mb-0 text-sm">Xóa</span>
                                        }
                                    </td>




                                    <td class="">
                                        <a href="#" class="btn btn-sm btn-neutral"><i class="fas fa-eye"></i></a>
                                        <a href="EditCategory/i.categoryid" class="btn btn-sm btn-neutral"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-sm btn-neutral"><i class="fas fa-minus-circle"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">
                    <nav aria-label="...">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>